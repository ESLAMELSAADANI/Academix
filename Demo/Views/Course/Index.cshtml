@model List<Course>
@{
    ViewData["Title"] = "Courses";
}

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

<!-- Custom Styling -->
<style>
    body {
        background: linear-gradient(135deg, #e3f2fd, #f8f9fa);
        font-family: 'Poppins', sans-serif;
    }

    .courses-container {
        background: #fff;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        transition: all 0.4s ease;
    }

        .courses-container:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(13, 110, 253, 0.1);
        }

    h1 {
        font-weight: 700;
        color: #0d6efd;
        text-shadow: 0 0 12px rgba(13, 110, 253, 0.15);
        letter-spacing: 1px;
    }

    .table {
        border-radius: 15px;
        overflow: hidden;
        margin-top: 20px;
        border: none;
    }

    thead {
        background: linear-gradient(90deg, #0d6efd, #00b4d8);
        color: #fff;
        text-transform: uppercase;
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    tbody tr {
        transition: all 0.3s ease;
    }

        tbody tr:hover {
            background-color: rgba(13, 110, 253, 0.08);
            transform: scale(1.01);
        }

    td, th {
        vertical-align: middle !important;
        padding: 14px 12px;
    }

    .btn {
        border-radius: 30px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn i {
            margin-right: 6px;
        }

    .btn-info {
        background: linear-gradient(90deg, #0dcaf0, #0aa2c0);
        border: none;
    }

        .btn-info:hover {
            background: linear-gradient(90deg, #0aa2c0, #0dcaf0);
            transform: translateY(-2px);
        }

    .btn-secondary {
        background: linear-gradient(90deg, #6c757d, #495057);
        border: none;
    }

        .btn-secondary:hover {
            background: linear-gradient(90deg, #495057, #6c757d);
            transform: translateY(-2px);
        }

    .btn-danger {
        background: linear-gradient(90deg, #dc3545, #a71d2a);
        border: none;
    }

        .btn-danger:hover {
            background: linear-gradient(90deg, #a71d2a, #dc3545);
            transform: translateY(-2px);
        }

    .no-courses {
        color: #6c757d;
        font-style: italic;
        padding: 45px 0;
        font-size: 1.1rem;
    }

    .add-btn {
        background: linear-gradient(90deg, #198754, #20c997);
        color: white;
        border-radius: 40px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(25, 135, 84, 0.3);
    }

        .add-btn:hover {
            background: linear-gradient(90deg, #157347, #198754);
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 8px 25px rgba(25, 135, 84, 0.45);
        }
</style>

<div class="container my-5">
    <div class="courses-container">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="text-center flex-grow-1">📚 Courses</h1>
            <a asp-action="Add" asp-controller="Course" class="btn add-btn ms-3 px-4 py-2">
                <i class="bi bi-plus-circle"></i> Add Course
            </a>
        </div>

        <table class="table table-bordered table-hover text-center align-middle">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Duration</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || Model.Count == 0)
                {
                    <tr>
                        <td colspan="4" class="no-courses">
                            <i class="bi bi-info-circle me-2"></i> No Courses Found!
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var course in Model)
                    {
                        <tr>
                            <td>@course.Id</td>
                            <td>@course.CrsName</td>
                            <td>@course.CrsDuration H</td>
                            <td>
                                <a asp-action="Details" asp-controller="Course" asp-route-id="@course.Id" class="btn btn-info btn-sm me-1">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a asp-action="Edit" asp-controller="Course" asp-route-id="@course.Id" class="btn btn-secondary btn-sm me-1 text-white">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-controller="Course" asp-route-id="@course.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this Course?');">
                                    <i class="bi bi-trash3"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
