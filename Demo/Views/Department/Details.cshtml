@model Department
@{
	ViewData["Title"] = "Details View";
}

<div class="container my-5">
	<div class="row justify-content-center">
		<div class="col-md-8 col-lg-6">
			<div class="card shadow-lg rounded-4 hover-card border-0 p-4 bg-gradient-light">
				<h2 class="text-center mb-4 fw-bold display-6 text-gradient">
					<i class="bi bi-building"></i> @Model.DeptName Department Details
				</h2>

				<div class="table-responsive mb-4">
					<table class="table table-striped table-hover align-middle text-center mb-0 shadow-sm rounded-3 overflow-hidden">
						<thead class="table-primary">
							<tr>
								<th><i class="bi bi-hash"></i> Id</th>
								<th><i class="bi bi-card-text"></i> Name</th>
								<th><i class="bi bi-people-fill"></i> Capacity</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td class="fw-semibold">@Model.DeptId</td>
								<td class="fw-semibold">@Model.DeptName</td>
								<td class="fw-semibold">@Model.Capacity</td>
							</tr>
						</tbody>
					</table>
				</div>

				<div class="text-center">
					<a asp-action="index" class="btn btn-primary btn-lg hover-btn rounded-pill px-4">
						<i class="bi bi-arrow-left-circle"></i> Return
					</a>
				</div>
			</div>
		</div>
	</div>
</div>

<style>
	body {
		background: linear-gradient(135deg, #f8f9fa, #e9ecef);
	}

	.text-gradient {
		background: linear-gradient(to right, #007bff, #6610f2);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.card {
		background: linear-gradient(145deg, #ffffff, #f1f3f5);
		transition: transform 0.3s, box-shadow 0.3s;
		border: none;
	}

	.hover-card:hover {
		transform: translateY(-6px) scale(1.02);
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
	}

	.table-striped > tbody > tr:nth-of-type(odd) {
		background-color: #f8f9fc;
	}

	.table-hover tbody tr:hover {
		background-color: #e9f2ff;
		transition: background-color 0.3s ease;
	}

	.btn.hover-btn {
		transition: all 0.2s ease;
	}

		.btn.hover-btn:hover {
			transform: scale(1.05);
			box-shadow: 0 5px 15px rgba(0,0,0,0.2);
		}

	tbody td {
		vertical-align: middle;
		font-size: 1.05rem;
	}

	.table-responsive {
		overflow-x: auto;
	}

	.table thead th i {
		margin-right: 5px;
	}
</style>
