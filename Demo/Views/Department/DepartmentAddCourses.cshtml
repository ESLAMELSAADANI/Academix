@model DepartmentCoursesVM
@{
    ViewData["Title"] = "Add Courses to Department";
}

<div class="container my-5 fade-in">
    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="fw-bold display-6">
            Add Courses to <span class="text-primary">@Model.Department.DeptName</span>
        </h1>
        <p class="text-muted fs-5">Choose from the available courses to enhance your department’s offerings.</p>
    </div>

    @if (Model.OtherCourses == null || !Model.OtherCourses.Any())
    {
        <!-- Empty State -->
        <div class="text-center py-5 bg-light rounded-4 shadow-sm">
            <i class="bi bi-journal-x text-danger display-5"></i>
            <h4 class="mt-3 text-muted">No Courses Available to Add</h4>
            <a asp-controller="Course" asp-action="Add" class="btn btn-success btn-lg mt-4 rounded-pill hover-lift">
                <i class="bi bi-plus-circle me-2"></i> Add New Course
            </a>
        </div>
    }
    else
    {
        <!-- Course Cards -->
        <div class="row g-4">
            @foreach (var course in Model.OtherCourses)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm rounded-4 hover-lift">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title text-success fw-bold mb-3">
                                    <i class="bi bi-journal-plus"></i> @course.CrsName
                                </h5>
                                <p class="mb-2"><i class="bi bi-hash"></i> <strong>ID:</strong> @course.Id</p>
                                <p class="mb-3"><i class="bi bi-clock"></i> <strong>Duration:</strong> @course.CrsDuration H</p>
                            </div>

                            <form asp-action="addDepartmentCourse" method="post" class="text-center mt-auto">
                                <input type="hidden" asp-for="@Model.Department.DeptId" />
                                <input type="hidden" asp-for="@Model.Department.DeptName" />
                                <input type="hidden" asp-for="@Model.Department.Capacity" />
                                <input type="hidden" name="courseID" value="@course.Id" />
                                <button type="submit" class="btn btn-success rounded-pill px-4 hover-scale">
                                    <i class="bi bi-plus-circle me-1"></i> Add Course
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- Return Button -->
    <div class="text-center mt-5">
        <a asp-action="Index" class="btn btn-outline-primary btn-lg rounded-pill hover-scale">
            <i class="bi bi-arrow-left-circle me-2"></i> Back to Departments
        </a>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #f9fafb, #eef1f4);
        font-family: 'Poppins', sans-serif;
    }

    .fade-in {
        animation: fadeIn 0.8s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .card {
        background: linear-gradient(145deg, #ffffff, #f3f6fa);
        border: 1px solid rgba(0,0,0,0.05);
        transition: all 0.3s ease;
    }

    .hover-lift:hover, .hover-scale:hover {
        transform: translateY(-4px) scale(1.03);
        box-shadow: 0 12px 25px rgba(0, 0, 0, 0.1);
    }

    .btn-success {
        background: linear-gradient(135deg, #198754, #28a745);
        border: none;
        transition: all 0.3s ease;
    }

        .btn-success:hover {
            background: linear-gradient(135deg, #157347, #198754);
        }

    .btn-outline-primary {
        border: 2px solid #0d6efd;
        color: #0d6efd;
        transition: all 0.3s ease;
    }

        .btn-outline-primary:hover {
            background: #0d6efd;
            color: #fff;
            transform: scale(1.05);
        }

    .card-title i,
    .card-text i,
    .btn i {
        margin-right: 6px;
    }
</style>
