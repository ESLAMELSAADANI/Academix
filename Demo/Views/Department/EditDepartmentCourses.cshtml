@model DepartmentCoursesVM
@{
    ViewData["Title"] = "Edit Department Courses";
}

<div class="container my-5">
    <h1 class="text-center mb-5 fw-bold">
        Edit Department <span class="text-primary">@Model.Department.DeptName</span> Courses
    </h1>

    <form method="post">
        <input type="hidden" asp-for="@Model.Department.DeptId" />

        <div class="row g-4">
            <!-- Left Table: Courses To Delete -->
            <div class="col-md-6">
                <div class="card shadow-sm rounded-4 hover-card border-0">
                    <div class="card-header bg-danger text-white fw-bold text-center fs-5">
                        <i class="bi bi-trash-fill"></i> Courses To Delete
                    </div>
                    <div class="card-body p-3 table-responsive">
                        <table class="table table-striped table-hover align-middle text-center mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Duration</th>
                                    <th>Select</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.DepartmentCourses == null || !Model.DepartmentCourses.Any())
                                {
                                    <tr>
                                        <td colspan="4" class="text-muted py-3">No Courses To Delete Found!</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var course in Model.DepartmentCourses)
                                    {
                                        <tr>
                                            <td>@course.Id</td>
                                            <td>@course.CrsName</td>
                                            <td>@course.CrsDuration H</td>
                                            <td>
                                                <input type="checkbox" name="CoursesToDelete" value="@course.Id" />
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Right Table: Courses To Add -->
            <div class="col-md-6">
                <div class="card shadow-sm rounded-4 hover-card border-0">
                    <div class="card-header bg-success text-white fw-bold text-center fs-5">
                        <i class="bi bi-plus-circle-fill"></i> Courses To Add
                    </div>
                    <div class="card-body p-3 table-responsive">
                        <table class="table table-striped table-hover align-middle text-center mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Duration</th>
                                    <th>Select</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.OtherCourses == null || !Model.OtherCourses.Any())
                                {
                                    <tr>
                                        <td colspan="4" class="text-muted py-3">No Courses To Add Found!</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var course in Model.OtherCourses)
                                    {
                                        <tr>
                                            <td>@course.Id</td>
                                            <td>@course.CrsName</td>
                                            <td>@course.CrsDuration H</td>
                                            <td>
                                                <input type="checkbox" name="CoursesToAdd" value="@course.Id" />
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Buttons -->
        <div class="d-flex flex-column align-items-center mt-5 gap-3">
            <button type="submit" class="btn btn-gradient px-5 py-2 fw-semibold">
                <i class="bi bi-check-circle"></i> Apply Changes
            </button>
            <a asp-action="Index" asp-controller="Department" class="btn btn-outline-secondary px-4 py-2">
                <i class="bi bi-arrow-left-circle"></i> Return
            </a>
        </div>
    </form>
</div>

<style>
    body {
        background: linear-gradient(135deg, #f8f9fa, #eaf1ff);
    }

    .card {
        border-radius: 1rem;
        box-shadow: 0 8px 25px rgba(0,0,0,0.08);
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .hover-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.2);
    }

    .table-hover tbody tr:hover {
        background-color: #f1f5ff;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        transition: all 0.2s;
    }

    .btn-gradient {
        background: linear-gradient(90deg, #007bff, #6610f2);
        border: none;
        color: #fff;
        border-radius: 30px;
        transition: transform 0.2s;
    }

        .btn-gradient:hover {
            transform: scale(1.05);
            background: linear-gradient(90deg, #0062cc, #520dc2);
        }

    .btn-outline-secondary i {
        margin-right: 5px;
    }

    .table td, .table th {
        vertical-align: middle;
    }
</style>
