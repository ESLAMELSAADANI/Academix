@model StudentDepartment
@{
	ViewData["Title"] = "Add Student";
	SelectList deptsSL = new SelectList(Model.Departments, "DeptId", "DeptName");
}

<div class="container my-5">
	<div class="row justify-content-center">
		<div class="col-lg-6 col-md-8">
			<div class="card bg-glass border-0 shadow-lg rounded-4">
				<div class="card-header text-center fw-bold fs-4 text-white"
					 style="background: linear-gradient(90deg, #007bff 0%, #00b4d8 100%);
            box-shadow: 0 3px 10px rgba(0,0,0,0.2);">
					<i class="bi bi-person-plus me-2"></i> Add New Student
				</div>

				<div class="card-body p-4">
					<form asp-action="Add" method="post" novalidate>

						<!-- Name -->
						<div class="mb-3">
							<label asp-for="Student.Name" class="form-label fw-semibold">
								<i class="bi bi-person-fill"></i> Name
							</label>
							<input asp-for="Student.Name" class="form-control shadow-sm" placeholder="Enter student name" />
							<span asp-validation-for="Student.Name" class="text-danger small"></span>
						</div>

						<!-- Age -->
						<div class="mb-3">
							<label asp-for="Student.Age" class="form-label fw-semibold">
								<i class="bi bi-calendar3"></i> Age
							</label>
							<input asp-for="Student.Age" class="form-control shadow-sm" placeholder="Enter student age" />
							<span asp-validation-for="Student.Age" class="text-danger small"></span>
						</div>

						<!-- Email -->
						<div class="mb-3">
							<label asp-for="Student.Email" class="form-label fw-semibold">
								<i class="bi bi-envelope-fill"></i> Email
							</label>
							<input asp-for="Student.Email" type="email" class="form-control shadow-sm" placeholder="example@email.com" />
							<span asp-validation-for="Student.Email" class="text-danger small"></span>
						</div>

						<!-- Department -->
						<div class="mb-3">
							<label asp-for="Student.DeptNo" class="form-label fw-semibold">
								<i class="bi bi-diagram-3"></i> Department
							</label>
							<select asp-for="Student.DeptNo" asp-items="@deptsSL" class="form-select shadow-sm">
								<option value="">-- Select Department --</option>
							</select>
							<span asp-validation-for="Student.DeptNo" class="text-danger small"></span>
						</div>

						<!-- Password -->
						<div class="mb-3">
							<label asp-for="Student.Password" class="form-label fw-semibold">
								<i class="bi bi-lock-fill"></i> Password
							</label>
							<input asp-for="Student.Password" type="password" class="form-control shadow-sm" placeholder="********" />
							<span asp-validation-for="Student.Password" class="text-danger small"></span>
						</div>

						<!-- Confirm Password -->
						<div class="mb-4">
							<label asp-for="Student.ConfirmPassword" class="form-label fw-semibold">
								<i class="bi bi-lock"></i> Confirm Password
							</label>
							<input asp-for="Student.ConfirmPassword" type="password" class="form-control shadow-sm" placeholder="********" />
							<span asp-validation-for="Student.ConfirmPassword" class="text-danger small"></span>
						</div>

						<!-- Buttons -->
						<div class="d-flex justify-content-center gap-3">
							<button type="submit" class="btn btn-gradient px-5 py-2 shadow-sm">
								<i class="bi bi-check-circle"></i> Add
							</button>
							<a asp-action="Index" class="btn btn-outline-secondary px-5 py-2">
								<i class="bi bi-arrow-left"></i> Back
							</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
}

<style>
	body {
		background: linear-gradient(135deg, #f8f9fa, #dbeafe);
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
	}

	.bg-glass {
		background: rgba(255, 255, 255, 0.85);
		backdrop-filter: blur(10px);
		border: 1px solid rgba(255, 255, 255, 0.4);
	}

	.bg-gradient {
		background: linear-gradient(45deg, #0d6efd, #00b4d8);
	}

	.form-control, .form-select {
		border-radius: 0.5rem;
		transition: all 0.2s ease-in-out;
	}

		.form-control:focus, .form-select:focus {
			box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
			transform: scale(1.02);
		}

	.btn-gradient {
		background: linear-gradient(45deg, #198754, #28a745);
		color: #fff;
		border: none;
		border-radius: 50px;
		font-weight: 500;
		transition: all 0.3s ease-in-out;
	}

		.btn-gradient:hover {
			transform: scale(1.07);
			box-shadow: 0 8px 20px rgba(25, 135, 84, 0.4);
		}

	.btn-outline-secondary:hover {
		transform: scale(1.05);
		box-shadow: 0 5px 12px rgba(108, 117, 125, 0.3);
	}

	label i {
		color: #0d6efd;
		margin-right: 5px;
	}

	@@media (max-width: 768px) {
		.btn-gradient, .btn-outline-secondary {
			width: 100%;
		}

		.card-header {
			font-size: 1.25rem;
		}
	}
</style>
